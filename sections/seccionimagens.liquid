
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 1.5 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 1.5 | round: 0 }}px;
    }
  }

  .image-gallery__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .image-gallery__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .image-gallery__item .image-gallery__image-wrapper {
    overflow: hidden;
    border-radius: 0.5rem; 
    aspect-ratio: 1 / 1; 
  }

  .image-gallery__item-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .image-gallery__item-link:hover .image-gallery__image {
    transform: scale(1.05);
  }

  .image-gallery__image {
    transition: transform 0.3s ease-in-out;
    width: 100%;
    height: 100%; 
    object-fit: cover; 
  }

  .image-gallery__title {
    text-align: center;
    margin-top: 1rem;
    font-size: 1.4rem;
    font-weight: 500;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.title != blank -%}
      <h2 class="title title-wrapper--no-top-margin">{{ section.settings.title | escape }}</h2>
    {%- endif -%}

    <div class="image-gallery__grid">
      {%- for block in section.blocks -%}
        <div class="image-gallery__item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link | default: '#' }}" class="image-gallery__item-link">
            <div class="image-gallery__image-wrapper">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 550 | image_tag:
                  loading: 'lazy',
                  class: 'image-gallery__image',
                  widths: '275, 550'
                }}
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
            {%- if block.settings.title != blank -%}
              <p class="image-gallery__title">{{ block.settings.title | escape }}</p>
            {%- endif -%}
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Galería de Imágenes",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título de la galería",
      "default": "Explora nuestras colecciones"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Esquema de colores",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Márgenes de la sección"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margen superior",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margen inferior",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image_item",
      "name": "Imagen",
      "limit": 8,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Título de la imagen"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Imágenes Promocionales",
      "blocks": [
        { "type": "image_item" },
        { "type": "image_item" },
        { "type": "image_item" },
        { "type": "image_item" }
      ]
    }
  ]
}
{% endschema %}